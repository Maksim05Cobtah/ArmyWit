@model ArmiVit.Models.ViewsModel.CategoryViewModel

@{
    ViewData["Title"] = "Додати категорію";
}

<section class="product-section">
    <div class="product-card">
        <h2>Додати категорію</h2>

        <form method="post" asp-action="AddCategory">
            <div class="field">
                <label asp-for="Name">Назва категорії</label>
                <input asp-for="Name" class="form-control" placeholder="Назва категорії" />
            </div>

            <button type="submit" class="btn btn-primary mt-2">Зберегти</button>
        </form>
    </div>
</section>

<section class="container mt-4">
    <div class="row g-4">

        @foreach (var item in Model.Categories)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Name</h5>
                    </div>
                </div>
            </div>
        }

    </div>
</section>
