@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    ViewData["Title"] = "Додати продукт";
}
@model ArmiVit.Models.ViewsModel.ProductViewModel
<section class="product-section">
    <div class="product-card">
        <h2>Додати продукт</h2>

        <form method="post" asp-action="AddProduct">
            <div class="field">
                <label>Імʼя</label>
                <input type="text" name="Name" placeholder="Назва продукту" />
            </div>

            <div class="field">
                <label>Ціна</label>
                <input type="number" step="0.01" name="Price" placeholder="₴ 0.00" />
            </div>

            <div class="field">
                <label>Опис</label>
                <textarea name="Description" placeholder="Короткий опис"></textarea>
            </div>
                <div class="field">
                    <label>Категорія</label>
                    <select name="CategoryId">
                        <option value="">Виберіть категорію</option>
                        @foreach (var category in Model.Categories ?? new List<Categories>())
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
            <button type="submit">Зберегти</button>
        </form>
    </div>
</section>
<section class="container mt-4">
    <div class="row g-4">

        @foreach (var item in Model.Products)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100">

                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Name</h5>

                        <p class="card-text">
                            <strong>Ціна:</strong> @item.Price ₴
                        </p>

                        <p class="card-text">
                            <strong>Кількість:</strong> @item.Quantity
                        </p>
                    </div>

                </div>
            </div>
        }

    </div>
</section>

