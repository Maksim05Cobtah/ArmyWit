<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArmiVit</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Product,css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ArmiVit.styles.css" asp-append-version="true" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>

<body>

<div class="page-wrapper">

    <header>
        <nav class="navbar navbar-expand-sm custom-navbar mb-4">
            <div class="container-fluid">
                <a class="navbar-brand soft-title" asp-controller="Home" asp-action="Index">
                    ArmiVit
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav gap-2">
                        <li class="nav-item">
                            <a class="nav-link soft-text" asp-controller="Home" asp-action="Index">
                                Категорії
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link soft-text" asp-controller="Home" asp-action="Privacy">
                                Про нас
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="content container pb-3">
        @RenderBody()
    </main>

    <footer class="custom-footer">
        <div class="container">
            <div class="row align-items-center gy-4">

                <div class="col-md-4 text-center text-md-start">
                    <span class="footer-brand soft-title">ArmiVit</span>
                </div>

                <div class="col-md-4 text-center footer-links">
                    <a asp-controller="Home" asp-action="Index" class="soft-text">Категорії</a>
                    <a asp-controller="Home" asp-action="Privacy" class="soft-text">Про нас</a>
                </div>

                <div class="col-md-4 text-center text-md-end">
                    <div class="social-icons">
                        <a href="#" class="instagram" aria-label="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="telegram" aria-label="Telegram">
                            <i class="bi bi-telegram"></i>
                        </a>
                        <a href="#" class="facebook" aria-label="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="viber" aria-label="Viber">
                            <i class="bi bi-phone"></i> <!-- Можна замінити на SVG Viber -->
                        </a>
                    </div>
                </div>

            </div>

            <div class="text-center mt-3 copyright soft-text">
                © 2026 ArmiVit
            </div>
        </div>
    </footer>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
